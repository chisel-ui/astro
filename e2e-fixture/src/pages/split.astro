---
import Layout from '../layouts/Layout.astro'
import { Split } from '../../../index.js'
---

<Layout title="Split">
    <h3>1/4</h3>
<Split gap="lg" fraction="1/4">
      <div class="box"></div>
      <div class="box"></div>
    </Split>
<h3>1/3</h3>
<Split gap="lg" fraction="1/3">
    <div class="box"></div>
    <div class="box"></div>
    </Split>
<h3>1/2</h3>
<Split gap="lg" fraction="1/2">
    <div class="box"></div>
    <div class="box"></div>
    </Split>
<h3>2/3</h3>
<Split gap="lg" fraction="2/3">
    <div class="box"></div>
    <div class="box"></div>
    </Split>
<h3>3/4</h3>
<Split gap="lg" fraction="3/4">
    <div class="box"></div>
    <div class="box"></div>
    </Split>
<h3>auto-start</h3>
<p>(The first Component has a width of 100px)</p>
<Split gap="lg" fraction="auto-start">
    <div class="box" style="width: 100px"></div>
    <div class="box"></div>
    </Split>
<h3>auto-end</h3>
<p>(The second Component has a width of 100px)</p>
<Split gap="lg" fraction="auto-end">
    <div class="box"></div>
    <div class="box" style="width: 100px"></div>
    </Split>
</Layout>

<style>
    h3 {
        margin-top: var(--gap-lg);
        margin-bottom: var(--gap-xs);
    }

    p {
        margin-top: 0;
        margin-bottom: var(--gap-xs);
    }

    .box {
        height: 50px;
        background: black;
    }
</style>